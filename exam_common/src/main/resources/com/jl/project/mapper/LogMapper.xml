			<if test="bean.ip != null">
				ip,
			</if>
			<if test="bean.success != null">
				success,
			</if>
			<if test="bean.createTime != null">
				create_time,
			</if>
			<if test="bean.logType != null">
				log_type,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
