<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jl.project.mapper.KnQuMapper">
	<!--实体映射-->
	<resultMap id="base_result_map" type="com.jl.project.entity.po.KnQu">
		<!-- ID -->
		<id column="id" property="id"/>
		<!-- 知识点ID -->
		<result column="kn_id" property="knId"/>
		<!-- 题目ID -->
		<result column="qu_id" property="quId"/>
	</resultMap>
	<!--通用查询列-->
	<sql id="base_column_list">
		id,kn_id,qu_id
	</sql>
	<!--基础查询条件-->
	<sql id="base_query_condition">
		<if test="query.id != null and query.id!= ''">
			and id = #{query.id}
		</if>
		<if test="query.knId != null and query.knId!= ''">
			and kn_id = #{query.knId}
		</if>
		<if test="query.quId != null and query.quId!= ''">
			and qu_id = #{query.quId}
		</if>
	</sql>
	<!--扩展查询条件-->
	<sql id="base_query_condition_extend">
		<if test="query.idFuzzy != null and query.idFuzzy != '' ">
			and id like concat('%', #{query.idFuzzy}, '%')
		</if>
		<if test="query.knIdFuzzy != null and query.knIdFuzzy != '' ">
			and kn_id like concat('%', #{query.knIdFuzzy}, '%')
		</if>
		<if test="query.quIdFuzzy != null and query.quIdFuzzy != '' ">
			and qu_id like concat('%', #{query.quIdFuzzy}, '%')
		</if>
	</sql>
	<!--通用查询条件-->
	<sql id="query_condition">
		<where>
			<include refid="base_query_condition"/>
			<include refid="base_query_condition_extend"/>
		</where>
	</sql>
	<!--查询列表-->
	<select id="selectList" resultMap="base_result_map">
		SELECT
		<include refid="base_column_list"/>
		FROM kn_qu
		<include refid="query_condition"/>
		<if test="query.orderBy!=null">
			order by ${query.OrderBy}
		</if>
		<if test="query.simplePage!=null">
			limit #{query.simplePage.start},#{query.simplePage.end}
		</if>
	</select>
	<!--查询数量-->
	<select id="selectCount" resultType="java.lang.Integer">
		SELECT COUNT(1)
		FROM kn_qu
		<include refid="query_condition"/>
	</select>
	<!--插入（匹配有值的字段）-->
	<insert id="insert" parameterType="com.jl.project.entity.po.KnQu">

		INSERT INTO kn_qu
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="bean.id != null">
				id,
			</if>
			<if test="bean.knId != null">
				kn_id,
			</if>
			<if test="bean.quId != null">
				qu_id,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="bean.id != null">
				#{bean.id},
			</if>
			<if test="bean.knId != null">
				#{bean.knId},
			</if>
			<if test="bean.quId != null">
				#{bean.quId},
			</if>
		</trim>
	</insert>

	<!--插入（匹配有值的字段）-->
	<insert id="insertOrUpdate" parameterType="com.jl.project.entity.po.KnQu">
		INSERT INTO kn_qu
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="bean.id != null">
				id,
			</if>
			<if test="bean.knId != null">
				kn_id,
			</if>
			<if test="bean.quId != null">
				qu_id,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="bean.id != null">
				#{bean.id},
			</if>
			<if test="bean.knId != null">
				#{bean.knId},
			</if>
			<if test="bean.quId != null">
				#{bean.quId},
			</if>
		</trim>
		on DUPLICATE key update
		<trim prefix="" suffix="" suffixOverrides=",">
			<if test="bean.knId != null">
				kn_id= VALUES(kn_id),
			</if>
			<if test="bean.quId != null">
				qu_id= VALUES(qu_id),
			</if>
		</trim>
	</insert>

	<!--添加（批量插入）-->
	<insert id="insertBatch" parameterType="com.jl.project.entity.po.KnQu">
		INSERT INTO kn_qu(id,kn_id,qu_id)values
		<foreach collection="list" item="item" separator=",">
			(#{item.id},#{item.knId},#{item.quId})
		</foreach>
	</insert>

	<!--批量插入或更新-->
	<insert id="insertOrUpdateBatch" parameterType="com.jl.project.entity.po.KnQu">
		INSERT INTO 
		kn_qu(id,kn_id,qu_id)values
		<foreach collection="list" item="item" separator=",">
			(#{item.id},#{item.knId},#{item.quId})
		</foreach>
			on DUPLICATE key update id= VALUES(id),kn_id= VALUES(kn_id),qu_id= VALUES(qu_id)
	</insert>


	<!--根据Id查询-->
	<select id="selectById" resultMap="base_result_map">
		select 
		<include refid="base_column_list"/>
		from kn_qu where id=#{id}
	</select>

	<!--根据Id更新-->
	<update id="updateById" parameterType="com.jl.project.entity.po.KnQu">
		update kn_qu
		<set>
			<if test="bean.id != null">
				id = #{bean.id},
			</if>
			<if test="bean.knId != null">
				kn_id = #{bean.knId},
			</if>
			<if test="bean.quId != null">
				qu_id = #{bean.quId},
			</if>
		</set>
		where id=#{id}
	</update>

	<!--根据Id删除-->
	<delete id="deleteById">
		delete from kn_qu where id=#{id}
	</delete>
</mapper>

